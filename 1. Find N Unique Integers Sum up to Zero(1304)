            start++;
        }
        return result;

IInd Approach-Two pointer
while(i<j){
    arr[i]=elem;
    arr[j]=-elem;
}
return arr*/

class Solution {
public:
    vector<int> sumZero(int n) {
        //IInd Approach
        vector<int>result(n);
        int i=0;
        int j=n-1;
        int start=1;
        while(i<j){
            result[i]=start;
            result[j]=-start;
            start++;
            i++;
            j--;
        }
        return result;
    }
};
