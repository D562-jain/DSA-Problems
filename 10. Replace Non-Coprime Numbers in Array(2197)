/*Story Points
1. left to right process
2. vector/stack->keep merging until possible
3. return vector
T.C=O(2N*log x), S.C=O(1)*/
class Solution {
public:
    vector<int> replaceNonCoprimes(vector<int>& nums) {
        vector<int>result;
        for(int num: nums){
            while(!result.empty()){
                int prev=result.back();
                int curr=num;
                int GCD=gcd(prev, curr);
                if(GCD==1) break;
                result.pop_back();
                int LCM=prev/GCD*curr;
                num=LCM;
            }
            result.push_back(num);
        }
        return result;
    }
};
